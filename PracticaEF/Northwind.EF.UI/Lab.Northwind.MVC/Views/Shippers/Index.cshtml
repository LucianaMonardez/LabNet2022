@model List<Lab.Northwind.MVC.Models.ShipperView>

@{
    ViewBag.Title = "Shipper Page";
}
<h1> Hola</h1>

<table class="table">
    <tr>
        <th scope="col">Id Shipper</th>
        <th scope="col">Company Name</th>
        <th scope="col">Shipper Phone</th>
        <th scope="col">Actualizar</th>
        <th scope="col">Eliminar</th>
        <th scope="col">Actualizar y eliminar</th>
    </tr>

    @foreach (var shipper in Model)
    {
        <tr>
            <th scope="row">@shipper.Id</th>
            <th scope="row">@shipper.CompanyName</th>
            <th scope="row">@shipper.Phone</th>
            <th scope="row"><button class="btn btn-success">@Html.ActionLink("Actualizar", "Update", "Shippers", new { id = shipper.Id, @style = "color: white" }, null)</button></th>
            <th scope="row"><button class="btn btn-danger">@Html.ActionLink("Eliminar", "Delete", new { id = shipper.Id }, new { onclick = "return confirm('El Shipper se eliminara. Estas seguro de continuar?') ", @style = "color: white" })</button></th>
            <th scope="row"><button class="btn btn-primary">@Html.ActionLink("Acciones", "UpdateAndDeleteShipper", "Shippers", new { id = shipper.Id })</button></th>
        </tr>
    }
</table>

<div>
    <button class="btn btn-primary btn-lg" >@Html.ActionLink("Insertar un nuevo Shipper", "Insert", "Shippers", new { @style = "color: white"})</button>
</div>